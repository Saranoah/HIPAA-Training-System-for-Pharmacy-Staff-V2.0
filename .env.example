# HIPAA Training System V3.0 - Environment Configuration
# Copy this file to .env and set secure values for production

# REQUIRED: Encryption key for sensitive data (min 32 characters)
HIPAA_ENCRYPTION_KEY=your-secure-key-here-32-characters-minimum

# OPTIONAL: Encryption salt (auto-generated if not set)
HIPAA_SALT=your-encryption-salt-here

# OPTIONAL: Database URL (default: SQLite in data/)
# For PostgreSQL: postgresql://user:password@localhost:5432/hipaa_training
DB_URL=sqlite:///data/hipaa_training.db

# OPTIONAL: Customize passing threshold (default: 80)
PASS_THRESHOLD=80

# OPTIONAL: Certificate validity in days (default: 365)
TRAINING_EXPIRY_DAYS=365

# OPTIONAL: Audit log retention in years (default: 6)
AUDIT_RETENTION_YEARS=6

# OPTIONAL: PostgreSQL password (if using PostgreSQL)
DB_PASSWORD=your-postgres-password

# OPTIONAL: Number of quiz questions (default: 10)
QUIZ_QUESTION_COUNT=10
